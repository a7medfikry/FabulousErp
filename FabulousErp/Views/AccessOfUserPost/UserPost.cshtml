@{
    ViewBag.Title = "User Post";
    ViewBag.FormCode = "SUP";
}

<div class="container-fluid">

    <div class="form-row">
        <label class="col-md-2 col-form-label col-form-label-sm"> User ID : </label>
        <div class="col-md-3 col-form-label col-form-label-sm">
            @Html.DropDownList("SUP-UserID", ViewBag.UserList as SelectList, "-Choose-", new { @id = "SUP-UserID", @class = "form-control form-control-sm" })
        </div>
        <label class="col-md-2 col-form-label col-form-label-sm"> User Name : </label>
        <div class="col-md-5">
            <input type="text" class="form-control form-control-sm" id="SUP-UserName" disabled />
        </div>
    </div>

    <div class="form-row">
        <label class="col-md-2 col-form-label col-form-label-sm"> Form Code : </label>
        <div class="col-md-3">
            @Html.DropDownList("SUP-FormCode", new List<SelectListItem>
                                    {
                                     new SelectListItem{Text = "TCJE",Value = "TCJE"}
                                    },"-Choose-",new { @id = "SUP-FormCode", @class = "form-control form-control-sm" })
        </div>
        <label class="col-md-2 col-form-label col-form-label-sm"> Form Name : </label>
        <div class="col-md-5">
            <input type="text" class="form-control form-control-sm" id="SUP-FormName" disabled />
        </div>
    </div>

    <div class="form-row">
        <div class="col-md-1">
            <button type="button" class="btn btn-primary ml-3" id="SUP-UPostAccessBtn"> Access </button>
        </div>
        <label id="SUP-ErrorSaveBtn" class="text-error col-md-3"></label>
    </div>

    <!-- Table Area Start -->
    <div class="mt-2">
        <table class="table table-bordered table-striped display nowrap">
            <thead>
                <tr>
                    <th width="20%">User ID</th>
                    <th width="20%">Form Code</th>
                    <th width="40%">Form Name</th>
                    <th width="20%">Action (Delete)</th>
                </tr>
            </thead>
            <tbody id="SUP-UPostAccessTbl"></tbody>
        </table>
    </div>
    <!-- Table Area End -->

    <div class="modal fade" id="SUP-DeleteConfirmation">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4>Remove Access</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <label id="SUP-PUUserID" class="hide-normal"></label>
                </div>
                <div class="modal-body">
                    <p id="popUpContent">Are You Sure? You Want To Remove This Access From This User..!</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal">Cancel</button>
                    <button type="button" id="SUP-ConfirmDeletePostAccessBtn" class="btn btn-danger btn-sm">Confirm</button>
                </div>
            </div>
        </div>
    </div>

</div>



@Html.IncludeVersionedJs("/_Content/JS/Settings/Setting_Script.js")
