@{
    ViewBag.Title = "Exchange Currencies";
    ViewBag.FormCode = "SCET";
}
<div class="container-fluid">
    <!--Global Error-->
    <span id="GlobalError"></span>

    <div class="form-row mb-1">
        <div class="col-md-2">
            <label class="col-form-label col-form-label-sm"> Currency ID : <i class="star">*</i> </label>
            @Html.DropDownList("CurrencyID", ViewBag.CurrencyList as SelectList, "-Choose-", new { @id = "CurrencyID", @class = "form-control form-control-sm" })
        </div>
        <div class="col-md-2">
            <label class="col-form-label col-form-label-sm"> Currency Name : </label>
            <input type="text" class="form-control form-control-sm" id="CurrencyName" disabled />
        </div>
        <div class="col-md-2">
            <label class="col-form-label col-form-label-sm"> Rate : <i class="star">*</i> </label>
            @Html.TextBox("Rate", null, new { @id = "Rate", @maxlength = "50", @class="form-control form-control-sm" })
        </div>
        <div class="col-md-3">
            <label class="col-form-label col-form-label-sm" for="StartDate"> Start Date : <i class="star">*</i> </label>
            @Html.TextBox("StartDate", null, new { @id = "StartDate", @type = "Date", @class = "form-control form-control-sm" })
        </div>
        <div class="col-md-3">
            <label class="col-form-label col-form-label-sm" for="ExpireDate"> Expire Date : <i class="star">*</i> </label>
            @Html.TextBox("ExpireDate", null, new { @id = "ExpireDate", @type = "Date", @class = "form-control form-control-sm" })
        </div>
    </div>

    <div class="row col-md-2 mt-2">
        <button type="button" id="addToList" class="btn btn-primary btn-sm">Add</button>
    </div>



    <!-- Table Area Start -->
    <div class="mt-2">
        <table class="table table-bordered table-striped display nowrap table-responsive-md" style="width:100%" id="main-table">
            <thead>
                <tr>
                    <th> Establish Date </th>
                    <th> Rate </th>
                    <th> Start Date </th>
                    <th> Expire Date </th>
                    <th> Action (Delete) </th>
                </tr>
            </thead>
            <tbody id="SetExchangeCurrencyInfo"></tbody>
        </table>
    </div>
    <!-- Table Area End -->

    <div class="modal fade" id="DeleteConfirmation">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 id="popUpHearder">Delete Rate</h4>
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <label id="ExchangeIDH" class="hide-normal"></label>
                </div>
                <div class="modal-body">
                    <p id="popUpContent">Are You Sure? You Want To Delete This Rate..!</p>
                </div>
                <div class="modal-footer">
                    <button type="button" id="CancelDelete" class="btn btn-primary btn-sm" data-dismiss="modal">Cancel</button>
                    <button type="button" id="Deletebtn" class="btn btn-danger btn-sm" onclick="ConfirmDelete()">Confirm</button>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {

    });
</script>
@Html.IncludeVersionedJs("/_Content/JS/Settings/Financial/Accounting/CurrencyDefinition/ExchangeCurrenciesSetup/GetCurrencyRates.js")
@Html.IncludeVersionedJs("/_Content/JS/Settings/Financial/Accounting/CurrencyDefinition/CurrencyFormateSetting/jquery.maskMoney.js")
