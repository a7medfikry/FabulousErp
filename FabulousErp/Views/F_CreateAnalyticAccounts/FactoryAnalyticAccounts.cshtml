        <button type="button" class="btn btn-primary btn-sm" id="AddAnalyticToFactory">Save</button>
        <label class="text-success" id="SaveSuccess"></label>
    </div>*@

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Analytic Account ID</th>
                <th>Analytic Account Name</th>
