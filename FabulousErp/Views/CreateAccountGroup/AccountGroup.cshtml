@{
    ViewBag.Title = "Create Account Group";
    ViewBag.FormCode = "SCAG";
}
<div class="container-fluid">
    <!-- Global Errors -->
    <div>
        <span id="CheckLength" class="hide-normal"></span>
        <span class="text-error" id="GlobalError"></span>
    </div>

    <div class="card mb-1">
        <div class="card-body p-2">
            <div class="row">
                <div class="col-md-3">
                    <label> Chart Account ID : <i class="star">*</i> </label>
                    @Html.DropDownList("ChartOfAccountID", ViewBag.AccountChartID as SelectList, "-Choose-", new { @id = "ChartOfAccountID", @class = "dropdown-list" })
                </div>
                <div class="col-md-3">
                    <label> Chart Account Name : </label>
                    <label class="text-danger bg-forname" id="ChartOfAccountName"></label>
                </div>
                <div class="col-md-3">
                    <label> Account Group ID : <i class="star">*</i> </label>
                    @Html.TextBox("AccountGroupID", null, new { @id = "AccountGroupID", @maxlength = "20" })
                </div>
                <div class="col-md-3">
                    <label> Account Group Name : <i class="star">*</i> </label>
                    @Html.TextBox("AccountGroupName", null, new { @id = "AccountGroupName", @maxlength = "100" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <label> Chart Formate : </label>
                    <label class="text-danger bg-forname" id="ChartFormat"></label>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div id="AccountInformation" class="hide-normal">
                <div class="row">
                    <label class="col-lg-2 col-md-3"> Account Name : </label>
                    <div class="col-lg-5 col-md-9">
                        @Html.TextBox("AccountName", null, new { @id = "AccountName", @maxlength = "100" })
                    </div>
                </div>
                <div class="row">
                    <label class="col-lg-2"> Account From : <i class="star">*</i> </label>
                    <div class="col-lg-10" id="SegmentsTexts">
                    </div>
                </div>
                <div class="row">
                    <label class="col-lg-2"> Accounts To <i class="star">*</i> </label>
                    <div class="col-md-10" id="SegmentsTextsTo"></div>
                </div>
                <div class="row">
                    <button type="button" class="btn btn-danger btn-sm" id="AddAccountBtn">Add</button>
                    <label class="text-error" id="AddError"></label>
                </div>
            </div>
        </div>
    </div>

    <!-- Table Area Start -->
    <div class="mt-2">
        <table class="table table-bordered table-striped display nowrap">
            <thead>
                <tr>
                    <th>Account Name</th>
                    <th>Accounts From</th>
                    <th>Accounts To</th>
                    <th>Action (Delete)</th>
                </tr>
            </thead>
            <tbody id="AccountsInfoTbl"></tbody>
        </table>
    </div>
    <!-- Table Area End -->

    <div id="FinalSave" class="ml-2">
        <button type="button" class="btn btn-info btn-sm" id="Reset">Reset</button>
        <span class="text-error" id="SaveError"></span>
        <span class="text-success" id="SaveSuccess"></span>
    </div>

</div>

<div class="modal fade" id="DeleteConfirmation">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 id="popUpHearder">Delete Account</h4>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <label id="AccountNameH" class="hide-normal"></label>
                <label id="AccountGroupIDH" class="hide-normal"></label>
            </div>
            <div class="modal-body">
                <p id="popUpContent">Are You Sure? You Want To Delete This Account..!</p>
                <p class="text-error" id="DeleteError"></p>
            </div>
            <div class="modal-footer">
                <button type="button" id="CancelDelete" class="btn btn-primary btn-sm" data-dismiss="modal">Cancel</button>
                <button type="button" id="ConfirmDeletebtn" class="btn btn-danger btn-sm">Confirm</button>
            </div>
        </div>
    </div>
</div>


@Html.IncludeVersionedJs("/_Content/JS/Settings/Financial/Accounting/CreateChartOfAccount/CreateAccountGroup/CreateAccountsGroup.js")
