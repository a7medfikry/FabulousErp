{
    <style>
        label.custom-control-label {
            position: relative;
            padding-right: 1.5rem;
        }

            label.custom-control-label::before, label.custom-control-label::after {
                right: 0;
                left: auto;
            }

        .bg-forname {
            height: 25px;
        }
    </style>
}
<script>
    $("input[type='checkbox']").click(function () {
        UpdateAccount(false);
    });
</script>