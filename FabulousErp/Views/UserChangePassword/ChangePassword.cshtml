@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .body-header {
        display: none;
    }
</style>
<div class="container-fluid" id="changepassword">
    <div class="row">
        <div class="col-md col-md-6 pl-5">
            <h4 class="text-danger">Password must meet the following requirements:</h4>
            <div class="divider-line"></div>
            <ul class="p-3">
                <li id="letter">At least <strong>one letter</strong></li>
                <li id="capital">At least <strong>one capital letter</strong></li>
                <li id="length">Be at least <strong>8 characters</strong></li>
                <li id="number">At least <strong>one number</strong></li>
            </ul>
        </div>

        <div class="col-md col-md-6">
            <div class="card">
                <div class="card-body">
                    <span class="Expyred">@ViewBag.Expyred</span>
                    <div class="form-group">
                        <label class="col-md-12"> Current Password <span class="star">*</span> <span class="text-error">@Html.ValidationMessage("ErrorOldPassword", null, new { @id = "ErrorOldPassword", @class = "text-error" })</span> </label>
                        <div class="col-md-12">
                            @Html.Password("OldPassword", null, new { @id = "OldPassword", @class="form-control form-control-sm" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-12">
                            New Password <span class="star">*</span> <span class="text-error">@Html.ValidationMessage("ErrorNewPassword", null, new { @id = "ErrorNewPassword", @class = "text-error" })</span>
                        </label>
                        <div class="col-md-12">
                            @Html.Password("NewPassword", null, new { @id = "NewPassword", @class = "form-control form-control-sm" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-12">
                            Confirm Password <span class="star">*</span> <span class="text-error">@Html.ValidationMessage("ErrorConfirmPassword", null, new { @id = "ErrorConfirmPassword", @class = "text-error" })</span>
                        </label>
                        <div class="col-md-12">
                            @Html.Password("ConfirmPassword", null, new { @id = "ConfirmPassword", @class = "form-control form-control-sm" })
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="form-group col-md-4">
                        <button type="button" class="btn btn-primary" onclick="UpdatePassBtn()"> Update </button>
                        <span class="ErrorIdentical"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@Html.IncludeVersionedJs("/_Content/JS/Settings/Financial/GeneralSetting/UserAccount/UserChangePassword/UpdatePassBtn.js")
@Html.IncludeVersionedJs("/_Content/JS/Settings/Financial/GeneralSetting/UserAccount/UserChangePassword/ChangePassValid.js")
