@{
    ViewBag.Title = "Tax Setting";
    ViewBag.FormCode = "STA";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string PaddingLeft = "";
    if (Business.GetLanguage()== FabulousDB.Models.Langs.English.ToString())
    {
        PaddingLeft = "padding-left:0px;padding-right:5px;";
    }
}

<div class="container-fluid">
    <!-- Span For Check If Company has Account-ID Or NOT -->
    <span id="STA-AccountIDCheck" class="hide-normal">@ViewBag.AccountIDCheck</span>

    <!-- tabs for company & branch & factory -->
    <ul class="nav nav-tabs" role="tablist">
        @*<li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#STA-group" role="tab" aria-selected="true"> Tax Group </a>
        </li>*@
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#STA-company" role="tab" aria-selected="true"> Company </a>
        </li>
        @*<li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#STA-branch" role="tab" aria-selected="true"> Branch </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#STA-factory" role="tab" aria-selected="true"> Factory </a>
        </li>*@
    </ul>

    <!-- tab panes -->
    <div class="tab-content bg-light">

        <!-- Group -->
        @*<div id="STA-group" class="tab-pane container-fluid p-3  fade show" role="tabpanel">
            <span id="STA-groupError" class="text-danger font-weight-bold"></span>
