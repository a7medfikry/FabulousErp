
@{
    ViewBag.Title = "Create Company Cost Center Accounts";
    ViewBag.FormCode = "SCCCA";
}

<div class="container-fluid">

    <span class="text-error" id="AccessError"></span>

    <div class="form-row mb-1 hide" id="CompCCAccounts">
        <label class="col-md-2 col-form-label col-form-label-sm"> Company ID <i class="star">*</i> </label>
        <div class="col-md-2">
            @*@Html.DropDownList("CompanyID", ViewBag.CompanyList as SelectList, "-Choose-", new { @id = "CompanyID", @class = "form-control form-control-sm" })*@
            <input type="text" id="CompanyID" class="form-control form-control-sm" value="@ViewBag.CompanyID" disabled />
        </div>
        <label class="col-md-2 col-form-label col-form-label-sm"> Company Name : </label>
        <div class="col-md-6">
            <input type="text" class="form-control form-control-sm" id="CompanyName" value="@ViewBag.CompanyName" disabled />
        </div>
    </div>

    <div id="FilterCostCenterIDComp">
        <div class="form-row mb-1">
            <label class="col-md-2 col-form-label col-form-label-sm"> Cost Center ID : <i class="star">*</i> </label>
            <div class="col-md-2">
                @Html.DropDownList("CompCostCenterID", new SelectList(""), "-Choose-", new { @id = "CompCostCenterID", @class = "form-control form-control-sm" })
            </div>
            <label class="col-md-2 col-form-label col-form-label-sm"> Cost Center Name : <i class="star">*</i> </label>
            <div class="col-md-6">
                <input type="text" class="form-control form-control-sm" id="CompCostCenterName" disabled />
            </div>
        </div>
    </div>

    <span class="text-error" id="GlobalError"></span>

    <div id="CCAccountsInputs">
        <div class="form-row mb-1">
            <label class="col-md-2 col-form-label col-form-label-sm"> Cost Account ID <i class="star">*</i> </label>
            <div class="col-md-2">
                @Html.TextBox("CostAccountID", null, new { @id = "CostAccountID", @maxlength = "20", @class = "form-control form-control-sm" })
            </div>
            <label class="col-md-2 col-form-label col-form-label-sm"> Cost Account Name <i class="star">*</i> </label>
            <div class="col-md-6">
                @Html.TextBox("CostAccountName", null, new { @id = "CostAccountName", @maxlength = "100", @class = "form-control form-control-sm" })
            </div>
        </div>
        <button type="button" class="btn btn-primary btn-sm mb-1 hide-normal" id="AddCCAccountsCompBtn"> Add </button>
    </div>

    <!-- Table Area Start -->
    <table class="table table-bordered table-striped display nowrap">
        <thead>
            <tr>
                <th width="20%">Cost Account ID</th>
                <th width="60%">Cost Account Name</th>
                <th width="20%">Action</th>
            </tr>
        </thead>
        <tbody id="CCAccountsTbl"></tbody>
    </table>
    <!-- Table Area End -->

    <div class="modal fade" id="DeleteConfirmation">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 id="popUpHearder">Delete Cost Account</h4>
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <label id="CCAccountID" class="hide-normal"></label>
                </div>
                <div class="modal-body">
                    <p id="popUpContent">Are You Sure? You Want To Delete This Cost Account..!</p>
                </div>
                <div class="modal-footer">
                    <button type="button" id="CancelDelete" class="btn btn-primary btn-sm" data-dismiss="modal">Cancel</button>
                    <button type="button" id="CompDeletebtn" class="btn btn-danger btn-sm" onclick="CompConfirmDelete()">Confirm </button>
                </div>
            </div>
        </div>
    </div>
</div>


@Html.IncludeVersionedJs("/_Content/JS/Settings/Financial/Accounting/_Company/C_CostCenter/C_CreateCostCenterAccounts/CompCCAccounts.js")
