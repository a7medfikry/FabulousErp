@Html.IncludeVersionedJs("/_Content/JS/MainTransactions.js")
<script>
    $(function () {
        $("#TCT-taxGroupID").trigger("change")
    })
    $("#TCT-documentType").on("change",function () {
        if ($(this).val() == 1 || $(this).val() == 2
            || $(this).val() == 3) {
            $("#StatementType").val(1);
        } else if ($(this).val() == 4) {
            $("#StatementType").val(2)
        }
        ForceRefreshThisPicker("StatementType");
    })
</script>