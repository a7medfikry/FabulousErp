@model IEnumerable<FabulousDB.Models.Fixed_assets_revaluate>

@{
    ViewBag.Title = "Revaluate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p>
    @if (Request["section"] != "Inquiry")
    {
        @Html.ActionLink("Create New", "Create", new { Setting = Request["Setting"] })
    }
</p>
<section style="overflow:auto;">
    <table class="table">
        <tr>
            <th>
                <label>Revaluate no</label>
            </th>
            <th>
                <label>Transaction date</label>
            </th>
            <th>
                <label> Revaluate date</label>
            </th>
            <th>
                <label> Old cost</label>
            </th>
            <th>
                <label> Old use life</label>
            </th>
            <th>
                <label>Adjustment cost</label>
            </th>
            <th>
                <label> Net profit</label>
            </th>
            <th>
                <label>Description</label>
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Revaluate_no)
                </td>
                <td>
                    @if (item.Transaction_date.HasValue)
                    {
                        @item.Transaction_date.Value.ToShortDateString()
                    }
                </td>
                <td>
                    @if (item.Revaluate_date.HasValue)
                    {
                        @item.Revaluate_date.Value.ToShortDateString()
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Old_cost)
                </td>
                <td>
                    @if (item.Old_use_life.HasValue)
                    {
                        @item.Old_use_life.Value.ToShortDateString()
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adjustment_cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Net_profit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Asset.Description)
                </td>
                <td>
                    @if (Request["section"] == "Transactions")
                    {
                        @Html.ActionLink("Void", "Delete", new { id = item.Id })
                    }
                    else
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) @Html.Raw("|")
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) @Html.Raw("|")
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    }
                </td>
            </tr>
        }

    </table>

</section>
