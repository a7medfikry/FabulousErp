
@{
    ViewBag.Title = "Fixed Asset Depr.";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Ajax.BeginForm("YearRpt", "Reports", new AjaxOptions { OnBegin = "ClearRpt", UpdateTargetId = "Rpt" }))
{
    <div class="row">
        <label class="col-sm-2">Year</label>
        <div class="col-sm-10">
            <input type="number" name="Year" />
        </div>
    </div>
    <div>
        <button type="submit" class="btn btn-secondary">Search</button>
    </div>
}
<section id="Rpt">
</section>
<script>
    function ClearRpt() {
        $("#Rpt").empty();
    }
</script>
