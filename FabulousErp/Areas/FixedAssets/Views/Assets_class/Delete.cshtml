@model FabulousDB.Models.Assets_class

@{
    ViewBag.Title = "Delete Assets class";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-danger">@TempData["Error"] </h2>
<h3>Are you sure you want to delete this?</h3>
@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <form action="/FixedAssets/Assets_class/DeleteWithAll/@ViewBag.Id" method="post">
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Delete Any Way With All Values" class="btn btn-danger"> |
        </div>
    </form>
}
<div>
    <h4>Assets_class</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Class Id
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Class_id)
        </dd>

        <dt>
            Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            Deperecation Rate
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Deperecation_rate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Active)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Active)
        </dd>


    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
