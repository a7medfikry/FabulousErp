@model IEnumerable<FabulousDB.Models.Assets_class>

@{
    ViewBag.Title = "Asset Class";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Class Id
        </th>
        <th style="text-align:left;">
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            Deperecation Rate
        </th>
        <th>
            In active
        </th>
        <th>
            Deprecation Method
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Class_id)
        </td>
        <td style="text-align:left;">
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @if (item.Deperecation_rate.HasValue)
            {
                @item.Deperecation_rate.Value
            }
            else
            {
                @Html.Raw("0")
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Active)
        </td>
        <td>
            @Enum.GetName(typeof(FabulousDB.Models.Deprecation_method),item.Deprecation_method)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
