@model FabulousDB.Models.Assets_main

@{
    ViewBag.Title = "Delete Assets Main";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-danger">@TempData["Error"]</h3>
<h3>Are you sure you want to delete this?</h3>
@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <form action="/FixedAssets/Assets_main/DeleteWithAll/@ViewBag.Id" method="post">
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Delete Any Way With All Values" class="btn btn-danger"> |
        </div>
    </form>
}
<div>
    <h4>Assets Main</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            Number Of Parts
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Number_of_parts)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Assets_class.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Assets_class.Description)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
