@model List<FabulousDB.Models.Custom_installment>

@{
    ViewBag.Title = "Edit Custom installment";

    Layout = null; //"~/Views/Shared/_Layout.cshtml";
}

@foreach (FabulousDB.Models.Custom_installment i in Model)
{
    using (Ajax.BeginForm("Create", new AjaxOptions { }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <input type="hidden" name="Id" value="@i.Id" />
            <div class="form-group">
                @Html.LabelFor(model => i.Custom_no, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input class = "form-control Custom_no" id = "" name= "Custom_no" value="@i.Custom_no"/>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => i.Percetage, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input class="form-control Percetage"  id="" name="Percetage"  value="@i.Percetage" />
                </div>
            </div>

            <div class="form-group hide">
                @Html.LabelFor(model => i.Installment_setting_id, "Installment setting", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input class="form-control Installment_setting_id" id="" name="Installment_setting_id" value="@i.Installment_setting_id" />
                </div>
            </div>

            <div class="form-group hide">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default SubmitCustomSetting" />
                </div>
            </div>
        </div>
    }
}


