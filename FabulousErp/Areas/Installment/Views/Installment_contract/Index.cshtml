@model IEnumerable<FabulousDB.Models.Installment_contract>

@{
    ViewBag.Title = "Installment Ccontract";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Create New", "Create",new { IsPay=Request["IsPay"] })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Currency.CurrencyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Installment_plan.Plan_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vendore.Vendor_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contract_no)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Desc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contract_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Creation_date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Currency.ISOCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Installment_plan.Plan_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vendore.Vendor_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contract_no)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Desc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @item.Contract_date.ToShortDateString()
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Creation_date)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
