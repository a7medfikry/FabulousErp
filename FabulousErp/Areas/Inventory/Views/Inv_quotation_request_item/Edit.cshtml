@model List<FabulousDB.Models.Inv_quotation_request_item>

@{
    Layout = null;
}

@foreach (FabulousDB.Models.Inv_quotation_request_item i in Model)
{
    using (Ajax.BeginForm("Edit", "Inv_purchase_request_items", new AjaxOptions { }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <input type="hidden" value="@i.Id" name="Id" />
            <div class="form-group">
                @Html.LabelFor(model => i.item_id, "item_id", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("item_id", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => i.item_id, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => i.Quntaty, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input class="form-control text-box single-line valid" data-val="true" data-val-number="The field Quntaty must be a number." data-val-required="The Quntaty field is required." name="Quntaty" type="number" value="@i.Quntaty">
                    @Html.ValidationMessageFor(model => i.Quntaty, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group hide">
                @Html.LabelFor(model => i.Quotation_request_id, "Quotation_request_id", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("Quotation_request_id", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => i.Quotation_request_id, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group hide">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

}
