@model FabulousDB.Models.Inv_sales_GS

@{
    ViewBag.Title = "Sales GS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Allow_insert_item_no_enough_store, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Allow_insert_item_no_enough_store)
                    @Html.ValidationMessageFor(model => model.Allow_insert_item_no_enough_store, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Allow_proforma_inv, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Allow_proforma_inv)
                    @Html.ValidationMessageFor(model => model.Allow_proforma_inv, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Allow_View_jv, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Allow_View_jv)
                    @Html.ValidationMessageFor(model => model.Allow_View_jv, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Override_price_in_price_list, " Override Price In Price List", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Override_price_in_price_list)
                    @Html.ValidationMessageFor(model => model.Override_price_in_price_list, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Allow_price_lower_cost, "Allow Price Lower Cost", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Allow_price_lower_cost)
                    @Html.ValidationMessageFor(model => model.Allow_price_lower_cost, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group AllowEdit">
            @Html.LabelFor(model => model.Allow_edit_sales_price, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Allow_edit_sales_price)
                    @Html.ValidationMessageFor(model => model.Allow_edit_sales_price, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.passwords_for_unhold_check, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox d-inline-block">
                    @Html.EditorFor(model => model.passwords_for_unhold_check)
                    @Html.ValidationMessageFor(model => model.passwords_for_unhold_check, "", new { @class = "text-danger" })
                </div>
                <div class="d-inline-block">
                    @Html.EditorFor(model => model.passwords_for_unhold, new { htmlAttributes = new { @class = "form-control", style = "display:none;" } })
                </div>
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Allow_generate_automatic_po, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Allow_generate_automatic_po)
                    @Html.ValidationMessageFor(model => model.Allow_generate_automatic_po, "", new { @class = "text-danger" })
                </div>
            </div>
        </div> 
        <div class="form-group">
            @Html.LabelFor(model => model.Show_cost_price, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Show_cost_price)
                    @Html.ValidationMessageFor(model => model.Show_cost_price, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}
<style>
    .form-group {
        width: 50% !important;
    }
</style>
<script>
    $("#passwords_for_unhold_check").click(function () {
        ShowHidePass();
    })
    $(function () {
        ShowHidePass();
    })
    function ShowHidePass() {
        if ($("#passwords_for_unhold_check").is(":checked")) {
            $("#passwords_for_unhold").show();
        } else {
            $("#passwords_for_unhold").hide();
        }
    }
</script>
<script>
    $(function () {
        if ("@ViewBag.StoreC" == 0) {
            ModelMsg("<h3 class='text-danger'>@FabulousErp.Business.Translate("You Can't Access This Page , There are no Site Setting")</h3>", "",
                false, IntRedirctToHome, IntRedirctToHome,"Ok");
        }
        $("#Override_price_in_price_list").trigger("change");
    })
    $("#Override_price_in_price_list").change(function () {
        if ($(this).is(":checked")) {
            $(".AllowEdit").hide();
        } else{
            $(".AllowEdit").show();
        }
    })

</script>