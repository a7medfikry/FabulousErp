@model FabulousDB.Models.Inv_po_GS

@{
    ViewBag.Title = "PO GS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            @Html.LabelFor(model => model.Next_po_no, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Next_po_no, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Next_po_no, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Next_pr_no, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Next_pr_no, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Next_pr_no, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Allow_receiv_without_inv, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Allow_receiv_without_inv)
                    @Html.ValidationMessageFor(model => model.Allow_receiv_without_inv, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Allow_receiv_part_of_po, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Allow_receiv_part_of_po)
                    @Html.ValidationMessageFor(model => model.Allow_receiv_part_of_po, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Allow_View_jv, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Allow_View_jv)
                    @Html.ValidationMessageFor(model => model.Allow_View_jv, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Show_items_cost_in_receiving, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Show_items_cost_in_receiving)
                    @Html.ValidationMessageFor(model => model.Show_items_cost_in_receiving, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.passwords_for_unhold_check, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox d-inline-block">
                    @Html.EditorFor(model => model.passwords_for_unhold_check)
                    @Html.ValidationMessageFor(model => model.passwords_for_unhold_check, "", new { @class = "text-danger" })
                </div>
                <div class="d-inline-block">
                    @Html.EditorFor(model => model.passwords_for_unhold, new { htmlAttributes = new { @class = "form-control", style = "display:none;" } })
                </div>
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.Allow_generate_automatic_po, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Allow_generate_automatic_po)
                    @Html.ValidationMessageFor(model => model.Allow_generate_automatic_po, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}


<style>
    .form-group {
        width: 50% !important;
    }

    input {
        vertical-align: bottom;
    }
</style>
<script>
    $("#passwords_for_unhold_check").click(function () {
        ShowHidePass();
    })
    $(function () {
        ShowHidePass();
    })
    function ShowHidePass() {
        if ($("#passwords_for_unhold_check").is(":checked")) {
            $("#passwords_for_unhold").show();
        } else {
            $("#passwords_for_unhold").hide();
        }
    }
</script>
<script>
    $(function () {
        if ("@ViewBag.StoreC" == 0) {
            ModelMsg("<h3 class='text-danger'>@FabulousErp.Business.Translate("You Can't Access This Page , There are no Site Setting")</h3>", "",
                false, IntRedirctToHome, IntRedirctToHome, "Ok")
        }
    })

</script>