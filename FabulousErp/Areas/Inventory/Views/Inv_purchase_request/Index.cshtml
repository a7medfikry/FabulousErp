@model IEnumerable<FabulousDB.Models.Inv_purchase_request>

@{
    ViewBag.Title = "Purchase Request";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Within_days)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Within_days_date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @try
            {
                @item.Date.ToShortDateString()
            }
            catch
            {

            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Within_days)
        </td>
        <td>
            @try
            {
                @item.Within_days_date.ToShortDateString()
            }
            catch
            {

            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Create", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
