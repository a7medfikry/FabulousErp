@model IEnumerable<FabulousDB.Models.Inv_pricelist>

@{
    Layout = null;
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Currency.ISOCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item.Item_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item.Unit_of_measure.Unit_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price_lvl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Start_quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.End_quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Currency.ISOCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Item.Item_id)
        </td>
        <td>
            @try
            {
                @Html.DisplayFor(modelItem => item.UOM.Unit_id)
            }
            catch
            {
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price_lvl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Start_quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.End_quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            <button class="btn-link btn Edit" data-id="@item.Id">Edit</button>|
            <button class="btn-link btn Delete" data-id="@item.Id">Delete</button>
        </td>
    </tr>
}

</table>
